% Misc math
\newcommand{\ud}{\mathrm{d}}
\newcommand{\udfrac}[3][\@nil]{%
  \def\tmp{#1}%
  \ifx\tmp\@nnil
    \frac{\ud#2}{\ud#3}%
  \else
    \frac{\ud^{#1}#2}{\ud#3^{#1}}%
  \fi%
}
\newcommand{\pdfrac}[3][\@nil]{%
  \def\tmp{#1}%
  \ifx\tmp\@nnil
    \frac{\partial#2}{\partial#3}%
  \else
    \frac{\partial^{#1}#2}{\partial#3^{#1}}%
  \fi%
}
